<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <!--OTHER-->
    <bean id="marshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
        <property name="contextPath">
            <value>pl.com.pablo.xmlsoccer.webservice</value>
        </property>
    </bean>

    <bean id="modelMapper" class="org.modelmapper.ModelMapper"/>

    <!--SERVICE-->
    <bean id="xmlSoccerService" class="pl.com.pablo.xmlsoccer.client.XmlSoccerServiceImpl">
        <property name="apiKey" value="APIKEY"/>

        <property name="defaultUri">
            <value>http://www.xmlsoccer.com/FootballDataDemo.asmx</value>
        </property>
        <property name="marshaller">
            <ref bean="marshaller"/>
        </property>
        <property name="unmarshaller">
            <ref bean="marshaller"/>
        </property>

        <property name="modelMapper">
            <ref bean="modelMapper"/>
        </property>
    </bean>
</beans>
